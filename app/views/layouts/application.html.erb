<!DOCTYPE html>
<html>
  <head>
    <title>Revival</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>

  </head>

  <body>
    <%= render "shared/navbar" %>

    <% if notice %>
      <%= notice %>
    <% end %>
    <div class="d-flex">
      <div class="box mx-auto mt-5">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
