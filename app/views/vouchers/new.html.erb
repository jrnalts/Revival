<div class="mx-auto">
  <span>您好，請在下方輸入資料以換取復興券</span>
  <%= form_for @voucher, url: {action: "create"} do |f| %>
  <div class="form-group my-2 mx-2">
    <%= f.label :name, '公司名稱' %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group my-2 mx-2">
    <%= f.label :uniform, '公司統編' %>
    <%= f.number_field :uniform %>
  </div>
  <div class="form-group my-2 mx-2">
    <%= f.label :tel, '聯絡電話' %>
    <%= f.text_field :tel %>
  </div>
  <small class="form-text text-muted">We'll never share your information with anyone else.</small>
  <div class="d-flex mt-2">
    <%= f.submit '送出', class:"btn btn-primary mx-auto text-center" %>
  </div>
  <% end %>
</div>

<!-- 錯誤訊息 -->
<% if @voucher.errors.any?  %>
  <ul>
  <% @voucher.errors.messages.each do |msg| %>
    <li class="message"><%= msg %></li>
  <% end %>
  </ul>
<% end %>